{
  "name": "Antonium",
  "description": "HPE's word and abbreviation highlighter",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "512": "antonium-logo.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://confluence.eng.nimblestorage.com/pages/viewpage.action?*",
    "*://stackoverflow.com/questions/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "storage"]
}
