{
  "name": "Antonium",
  "description": "Abbreviation highlighter",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "512": "antonium-logo.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "storage"]
}
